<?xml version="1.0" encoding="UTF-8"?>
<project name="Build integration plugin" default="build-features">

	<!-- Type: N == Nightly -->
	<property name="buildType" location="N" />
	<property name="buildDirectory" location="/tmp/plugin-build" />
		
	<property name="javacSource" value="1.5" />
	<property name="javacTarget" value="1.5" />

	<property name="builder" location="." />
	<property name="topLevelElementId" value="com.vaadin.integration.eclipse" />
	<property name="baseLocation" location="${eclipse.home}" />
	<property name="base" location="${baseLocation}/.." />

	<import file="${eclipse.pdebuild.scripts}/build.xml" />

	<target name="build-features" depends="copyProjects, main" />

	<target name="copyProjects">
		<!--<delete dir="${buildDirectory}" />
		<mkdir dir="${buildDirectory}" />
		-->
		<record name="${buildDirectory}/build.log" loglevel="verbose" />
		<echoproperties />

		<!--  Check out plugin(s) -->
		<delete dir="${buildDirectory}/plugins" />
		<exec executable="svn">
			<arg value="checkout" />
			<arg value="http://dev.vaadin.com/svn/integration/eclipse/plugins" />
			<arg value="${buildDirectory}/plugins" />
		</exec>

		<!--  Check out feature(s) -->
		<delete dir="${buildDirectory}/plugins" />
		<exec executable="svn">
			<arg value="checkout" />
			<arg value="http://dev.vaadin.com/svn/integration/eclipse/features" />
			<arg value="${buildDirectory}/features" />
		</exec>

	</target>


</project>
